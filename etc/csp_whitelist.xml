<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="img-src">
            <values>
                <value id="openstreetmap_img" type="host">*.openstreetmap.org</value>
                <value id="maps_googleapis_img" type="host">https://maps.googleapis.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="openstreetmap_img" type="host">*.openstreetmap.org</value>
                <value id="maps_googleapis_img" type="host">https://maps.googleapis.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
